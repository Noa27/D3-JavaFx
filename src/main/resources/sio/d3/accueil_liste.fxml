<VBox alignment="CENTER" spacing="20.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sio.d3.ListeClimsController">
    <children>
        <TableView fx:id="listeClims" layoutX="59.0" layoutY="55.0"
                   prefHeight="500.0" prefWidth="100.0">
            <columns>
                <TableColumn fx:id="marque" prefWidth="100" text="Marque" >
                    <!--On indique que ce champs est une propriété qui-->
                    <!-- correspondra à une propriété dans la classe Climatiseur -->
                    <cellValueFactory>
                        <PropertyValueFactory property= "marque"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="modele" prefWidth="100.0" text="Modele" >
                    <!--On indique que ce champs est une propriété qui-->
                    <!-- correspondra à une propriété dans la classe Climatiseur -->
                    <cellValueFactory>
                        <PropertyValueFactory property= "modele"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="puissance" prefWidth="100" text="Puissance" >
                    <!--On indique que ce champs est une propriété qui-->
                    <!-- correspondra à une propriété dans la classe Climatiseur -->
                    <cellValueFactory>
                        <PropertyValueFactory property= "puissance"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="surmincouv" prefWidth="100" text="SurMinCouv" >
                    <!--On indique que ce champs est une propriété qui-->
                    <!-- correspondra à une propriété dans la classe Climatiseur -->
                    <cellValueFactory>
                        <PropertyValueFactory property= "surmincouv"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="surmaxcouv" prefWidth="100" text="SurMaxCouv" >
                    <!--On indique que ce champs est une propriété qui-->
                    <!-- correspondra à une propriété dans la classe Climatiseur -->
                    <cellValueFactory>
                        <PropertyValueFactory property= "surmaxcouv"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <ImageView onMouseClicked="#ajoutClimatiseur" fitWidth="50" preserveRatio="true">
        <image>
            <Image url="@images/add.png" />
        </image>
    </ImageView>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>